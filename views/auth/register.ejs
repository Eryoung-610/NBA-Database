<div class="container pt-60">
    <div class="row center-align"  id="regForm">
        <form class="col s12" action="/auth/register" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="fullName" type="text" class="validate" name="name">
                    <label for="fullName" class="">Full Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input id="email" type="email" class="validate" name="email">
                    <label for="email" class="">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    <input id="pass" type="password" class="validate" name="password">
                    <label for="pass" class="">Password</label>
                    <p>Password must be between 4-99 characters</p>
                </div>
            </div>


            <div class="row">
                <div class="col s12 mt-25">
                    <button class="btn black waves-effect waves-light" type="submit">Register Now
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>


    </div>

    </form>
</div>